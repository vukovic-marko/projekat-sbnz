        $z: Zapisnik( $kazna: prekoracenjeBrzine, zona == Zapisnik.Zona.ZONA_30 )
        $k: KaznaPrekoracenjaBrzine( this == $kazna, iznosPrekoracenja > 50, clan == null )
    then
        modify($k) {
            setClan(Kazna.Clanovi.CLAN_331),
            setKazneniPoeni(6),
            setZabranaUpravljanja(5)
        }
end

